{
  "name": "ubiquibot",
  "version": "0.1.2",
  "description": "Enables Ubiquity DevPool automation in your repository.",
  "author": "Ubiquity DAO",
  "license": "MIT",
  "homepage": "https://github.com/ubiquity/ubiquibot.git",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build:ci": "ncc build src/adapters/github/github-actions.ts -o ./",
    "build:serverless": "ncc build src/index.ts -o ./",
    "build": "tsc",
    "postbuild": "copyfiles src/assets/images/* lib/",
    "clean": "rimraf ./dist ./lib ./node_modules",
    "format:check": "prettier -c src/**/*.ts",
    "format": "prettier --write src",
    "lint": "eslint --ext .ts ./src",
    "start:serverless": "tsx src/adapters/github/github-actions.ts",
    "start:watch": "nodemon --exec 'yarn start'",
    "start": "probot run ./lib/src/index.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@netlify/functions": "^1.4.0",
    "@probot/adapter-aws-lambda-serverless": "^3.0.2",
    "@probot/adapter-github-actions": "^3.1.3",
    "@sinclair/typebox": "^0.25.9",
    "@supabase/supabase-js": "^2.4.0",
    "@types/ms": "^0.7.31",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@uniswap/permit2-sdk": "^1.2.0",
    "@vercel/ncc": "^0.34.0",
    "ajv": "^8.11.2",
    "ajv-formats": "^2.1.1",
    "axios": "^1.3.2",
    "decimal.js": "^10.4.3",
    "copyfiles": "^2.4.1",
    "ethers": "^5.7.2",
    "exponential-backoff": "^3.1.1",
    "husky": "^8.0.2",
    "jimp": "^0.22.4",
    "js-yaml": "^4.1.0",
    "libsodium-wrappers": "^0.7.11",
    "lint-staged": "^13.1.0",
    "ms": "^2.1.3",
    "node-html-parser": "^6.1.5",
    "node-html-to-image": "^3.3.0",
    "nodemon": "^2.0.19",
    "parse5": "^7.1.2",
    "prettier": "^2.7.1",
    "probot": "^12.2.4",
    "telegraf": "^4.11.2",
    "tsx": "^3.12.7",
    "yaml": "^2.2.2"
  },
  "devDependencies": {
    "@types/eslint": "^8.40.2",
    "@types/jest": "^28.1.0",
    "@types/libsodium-wrappers": "^0.7.10",
    "@types/node": "^14.18.37",
    "@types/source-map-support": "^0.5.6",
    "eslint": "^8.43.0",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "rimraf": "3.0.2",
    "smee-client": "^1.2.2",
    "source-map-support": "^0.5.21",
    "supabase": "^1.38.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "events": {
      "config": "",
      "exit": "",
      "crash": "",
      "restart": "clear && printf '\\033[3J'",
      "start": "clear && printf '\\033[3J'"
    },
    "verbose": true,
    "ext": "ts",
    "exec": "yarn start"
  }
}
